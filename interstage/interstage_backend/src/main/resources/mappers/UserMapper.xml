<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.interstage.mapper.UserMapper">

	<select id="findAll" resultType="com.interstage.domain.UserDTO">
		SELECT * FROM users
	</select>
	
	<insert id="insertUser" parameterType="com.interstage.domain.UserDTO" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO users(username, password, email)
		VALUES (#{username}, #{password}, #{email})
	</insert>

</mapper>